<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jogo2Julias.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid>
       <Image
        Source="fotocapa.jpg"
        Aspect="AspectFill"/>

       <Label Text="PetCare"
              TextColor="#2f2f36"
              Margin="20,90,20,0"
              FontFamily="YorkGame-Regular"
              FontSize="60"
              LineHeight="1.5"
              HorizontalOptions="Center"
              HorizontalTextAlignment="Center"
              VerticalOptions="Start"/>

       <Button Text="Iniciar"
           HeightRequest="50"
           Clicked="BotaoIniciarFoiClicado"
           CornerRadius="25"
           BackgroundColor="#2f2f36"
           TextColor="White"
           BorderWidth="1"
           BorderColor="White"
           Margin="0,0,0,10"
           FontSize="18"
           FontFamily="Aqua Wow"
            VerticalOptions="End"/>
     </Grid>

</ContentPage>
